{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    // basic recommended rules
    "eslint:recommended",

    // overwrite config for p5.js
    "@fal-works/p5js",

    // turn off rules that might conflict with Prettier
    "prettier"
  ],
  "rules": {
    // just for pre-formatting purpose
    "lines-around-comment": [
      "error",
      { "beforeBlockComment": true, "beforeLineComment": true }
    ]
  }
}
